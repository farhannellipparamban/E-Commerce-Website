      font-weight: bold;
      margin-bottom: 20px;
    }

    .breadcrumb-area {
      padding: 20px 0;
      background-color: #e6e6e6;
    }

    .breadcrumb-content h1 {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
      color: #000000;
    }

    .breadcrumb-content nav {
      font-size: 16px;
    }

    .single-product-area {
      margin-top: 50px;
    }

    .product-carousel .single-product-item img {
      max-width: 100%;
    }

    .product-info h3 {
      font-size: 38px;
      font-weight: bold;
      margin-bottom: 35px;
    }

    .product-info h2 {
      font-size: 36px;
      font-weight: bold;
      color: #092399;
      margin-bottom: 15px;
    }

    .product-info ul.list {
      margin-bottom: 20px;
    }

    .product-info ul.list li {
      font-size: 16px;
      color: #000000;
      margin-bottom: 5px;
    }

    .product-info p {
      font-size: 16px;
      color: #000000;
      margin-bottom: 20px;
    }


    .subscribe-part {
      padding: 50px 0;
      width: 100%;
      background-color: #191d4d;
      text-align: center;
      margin-top: 30px;
    }

    .subscribe-content h2 {
      font-size: 32px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #ffffff;
    }

    .subscribe-content p {
      font-size: 16px;
      color: #ffffff;
      margin-bottom: 30px;
    }

    .subscribe-form input {
      padding: 10px 25px;
      border: none;
      border-radius: 30px;
      background-color: #f1d7d7;
    }

    .subscribe-form .btn_1 {
      padding: 12px 25px;
      border: none;
      background-color: #ff0000;
      color: #ffffff;
      border-radius: 30px;
      text-transform: uppercase;
      transition: background-color 0.3s ease;
