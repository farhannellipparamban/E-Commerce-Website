<%- include("../layouts/userPartials/header.ejs") %>
  <style>

    .hero-area {
      background: url("/path/to/hero-image.jpg") no-repeat center;
      background-size: cover;
      padding: 200px 0;
      color: #b43333;
      text-align: center;
      background: #e0e0e0;
    }

    .hero-content h2 {
