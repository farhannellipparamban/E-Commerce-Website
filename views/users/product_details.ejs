    .nav-tabs .nav-item {
      margin-bottom: 10px;
    }

    .product__thumb__pic img {
      max-width: 100%;
      height: auto;
      border: 1px solid #ddd;
      transition: transform 0.2s;
      cursor: pointer;
    }

    .product__details__pic__item {
      max-width: 100%;
      padding: 80px;
      height: auto;
      transition: transform 0.2s;
      cursor: pointer;
    }

    .zoom-image:hover {
      transform: scale(1.1);
      border-color: #ff9900;
    }


    .container {
      display: flex;
    }

    .quantity {
      flex-direction: column;
      display: flex;
      padding: 20px;
    }

    .input-number {
      width: 50px;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
      text-align: center;
      font-size: 14px;
    }

    .quantity-controls {
      display: flex;
      align-items: center;
    }

    .quantity-controls button {
      padding: 7px 10px;
      border: none;
      background-color: #000000;
      font-size: 12px;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .quantity-controls button:hover {
      background-color: #616161;
    }

    .product-actions {
      display: flex;
      flex-direction: row;
      align-items: center;
    }

    .fa-heart {
  color: #ff0000;
  margin: 20px;
  font-size: 32px; 
  transition: color 0.3s; 
  cursor: pointer; 
}

.fa-heart:hover {
  color: #59ec14; 
}

.fa-heart:active {
  transform: scale(1.2); 
}


.review-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
  background-color: #f9f9f9;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(168, 20, 20, 0.1);
}

.rating-title {
  font-size: 38px;
  font-weight: bold;
  color: #0004ffe1;
  text-align: center;
  margin-top: 100px;
  margin-bottom: 30px;
}

.review-form {
  text-align: center;
  margin-top: 20px;
  background-color: #f9f9f9;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.rating > input{ display:none;}

.rating > label {
position: relative;
width: 1.1em;
font-size: 20px;
color: #FFD700;
cursor: pointer;
}

.rating > label::before{
content: "\2605";
position: absolute;
opacity: 0;
}

.rating > label:hover:before,
.rating > label:hover ~ label:before {
opacity: 1 !important;
}

.rating > input:checked ~ label:before{
opacity:1;
}

.rating:hover > input:checked ~ label:before{ opacity: 0.4; }

.rating {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
flex-direction: row-reverse;

}

.input-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
  width: 100%;
}

textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
  margin-top: 10px;
}

.error-message {
  font-size: 14px;
  margin-top: 5px;
}

.submit-button {
  background-color: #ff0000;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 18px;
  cursor: pointer;
}

.submit-button:hover {
  background-color: #333;
}

  </style>
  <main>
    <!-- Hero Area Start -->
    <section class="hero-area">
      <div class="container">
        <div class="hero-content">
          <h2>Product Details</h2>
        </div>
      </div>
    </section>

    <!-- Hero Area End -->

    <!-- Breadcrumb Area Start -->
    <section class="breadcrumb-area">
      <div class="container">
        <div class="breadcrumb-content">
          <h1>
            <%= data.name %>
          </h1>
          <nav>
            <a href="/">Home</a>
            <span class="lnr lnr-arrow-right"></span>
            <a href="/shop">Shop</a>
            <span class="lnr lnr-arrow-right"></span>
            <a href="#">Product Details</a>
          </nav>
        </div>
      </div>
    </section>
    <!-- Breadcrumb Area End -->

    <!-- Single Product Area Start -->
    <section class="single-product-area">
      <div class="container">
        <div class="row">
        
          <div class="col-lg-3 col-md-3">
            <ul class="nav nav-tabs" role="tablist">
              <% for (let i=0; i < data.image.length; i++) { %>
                <li class="nav-item">
                  <a class="nav-link <% if (i === 0) { %>active<% } %>" data-toggle="tab" href="#tabs-<%= i + 1 %>"
                    role="tab">
                    <div class="product__thumb__pic">
                      <img src="/assets/CropedImages/<%= data.image[i] %>" alt="<%= data.name %>" class="zoom-image">
                    </div>
                  </a>
                </li>
                <% } %>
            </ul>
          </div>
          <div class="col-lg-6 col-md-9">
            <div class="tab-content" style="margin-top: 50px;">
              <% for (let i=0; i < data.image.length; i++) { %>
                <div class="tab-pane <% if (i === 0) { %>active<% } %>" id="tabs-<%= i + 1 %>" role="tabpanel">
                  <div class="product__details__pic__item">
                    <img src="/assets/CropedImages/<%= data.image[i] %>" alt="<%= data.name %>" class="zoom-image">
                  </div>
                </div>
                <% } %>
            </div>
          </div>
        </div>


        <div class="col-lg-6">
          <div class="product-info">
            <h3>
              <%= data.name %>
            </h3>
            <h2>₹ <%= data.price %>
            </h2>
            <ul class="list">
              <li><span>Category</span>: <%= data.category.name %>
              </li>
              <li>
                <span>Availability</span>: <% if (data.stock> 0) { %> In Stock
                  <% } else { %> Out of stock <% } %>
              </li>
            </ul>
            <p>
              <%= data.description %>
            </p>

            <div class="quantity">
              <div class="quantity-controls">
                <button class="quantity-decrease">-</button>
                <input class="input-number" type="number" value="1" min="1" max="10" />
                <button class="quantity-increase">+</button>
              </div>
            </div>
                <i class="far fa-heart" onclick="addToWishlist('<%= data._id %>')"></i>
            <div class="product-actions">

              <div class="add_to_cart">
                <button type="submit" onclick="addToCart('<%= data._id %>')" class="btn btn-danger mx-3">
                  Add To Cart
                </button>
              </div>
            </div>

          </div>
        </div>
      </div>
      </div>
    </section>

    <!-- Single Product Area End -->

    <!-- Product Review and Rating -->
    <div class="rating-container">
      <h2 class="rating-title">Product Reviews</h2>
    <div class="row col-md-10" style="padding-left: 100px;">
      <h4 style="color: #ff0000; margin: 35px;" >Add Your Review</h4>

      <div class="col-sm-10">
        <div class="row">
          <div class="col-md-12 pills">
            <div class="bd-example bd-example-tabs">
              <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

              <div class="tab-content" id="pills-tabContent">
   

                <div class="tab-pane border fade show active" id="pills-manufacturer" role="tabpanel" aria-labelledby="pills-manufacturer-tab" style=" width: 65vw;color: #fcd600dc;">
                  <form id="reviewForm" action="/review" method="post" style="text-align: center;">
                    <div class="rating" style="margin: 20px;">
                      <input type="radio" name="rating" value="5" id="5" style="display: none;">
                      <label for="5" style="font-size: 24px; cursor: pointer;">☆</label>
                      
                      <input type="radio" name="rating" value="4" id="4" style="display: none;">
                      <label for="4" style="font-size: 24px; cursor: pointer;">☆</label>
                      
                      <input type="radio" name="rating" value="3" id="3" style="display: none;">
                      <label for="3" style="font-size: 24px; cursor: pointer;">☆</label>
                      
                      <input type="radio" name="rating" value="2" id="2" style="display: none;">
                      <label for="2" style="font-size: 24px; cursor: pointer;">☆</label>
                      
                      <input type="radio" name="rating" value="1" id="1" style="display: none;">
                      <label for="1" style="font-size: 24px; cursor: pointer;">☆</label>
                    </div>
                    
                    <div class="input-group">
                    <textarea name="review" id="review" rows="4" placeholder="Write your review..." required></textarea>
                    <div class="error-message" style="color: red;" id="codeError"></div>
                  </div>
                    <input type="hidden" name="id" value="<%= data._id %>">
                    
                  <button type="submit" class="submit-button">Submit Review</button>
                  </form>
                  

        <% data.review.forEach(function(data) { %> 
          <div class="review-container"  >
            <%if(data.user){ %>

              <p  style="font-size: 20px;"> <i class="fas fa-user-circle"></i>
                <%=data.user.name%></p>
              <% }else{%>
                <p style="font-size: 20px; color: #ff0000;"><i class="fas fa-user-circle"></i>
                  Unknown</p>
                <% } %>
            <% if(data.rating==1){%>
              <span class="star-rating">
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                
              </span>
              <% }else if(data.rating==2){ %>
                <span class="star-rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                  
                </span>

            <% }else if(data.rating==3){ %>
              <span class="star-rating">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                
              </span>
            <% }else if(data.rating==4){ %>
              <span class="star-rating">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="far fa-star"></i>
                
              </span>
            <% }else if(data.rating==5){ %>
              <span class="star-rating">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </span>
              

              <% }else{ %>
                <span class="star-rating">
                  <i class="fas fa-star-half"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>
                  <i class="far fa-star"></i>

                </span>
                <% } %>
            <p><%=data.review%></p>
          </div>
          <% }); %>  
      </div>
      
    </div>

    <!-- End Review  -->

    
  </main>
  <style>
    /* Zoom on hover */
    .zoom-image {
      transition: transform 0.9s ease-in-out;
    }

    .zoom-image:hover {
      transform: scale(1.2);
    }
  </style>



  <script>
    function addToCart(id) {
      console.log(id);
      $.ajax({
        url: "/addtocart",
        method: "post",
        encoded: true,
        data: {
          id: id,
        },
      }).done((data) => {
        if (data.success) {
          Swal.fire({
            position: "center",
            icon: "success",
            title: "Product added to cart",
            showConfirmButton: false,
            timer: 1500,
          });
        }else{
          window.location.href = '/login';

        }
      });
    }

    function addToWishlist(id) {
      console.log(id);
      $.ajax({
        url: "/addToWishlist",
        method: "post",
        encoded: true,
        data: {
          Id: id,
        },
      }).success((response) => {
        if (response.success) {
          Swal.fire({
            position: "center",
            icon: "success",
            title: "Added To Wishlist",
            showConfirmButton: false,
            timer: 1500,
          });
        } else if (response.check) {
          Swal.fire({
            position: "center",
            icon: "warning",
            title: "Oops...",
            text: "Already added to Wishlist!!",
          });
        } else {
          window.location.href = '/login';
          }
      });
    }
  </script>

  <%- include("../layouts/userPartials/footer.ejs") %>