        <div class="row">
          <div class="col-lg-12">
            <div class="order-details-iner">
              <h3 class="order-details-title">Order Details</h3>
              <table class="table table-bordered order-details-table">
                <thead>
                  <tr>
                    <th scope="col" colspan="2">Image</th>
                    <th scope="col" colspan="2">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Status</th>
                    <th scope="col">Price</th>
                  </tr>
                </thead>
                <tbody>
                  <% product.forEach((value, index)=> { %>
                    <tr>
                      <td colspan="2" class="product-image-cell">
                        <img class="product-image" src="/assets/CropedImages/<%= value.productId.image[0] %>"
                          alt="Product Image">
                      </td>
                      <td colspan="2" class="product-name-cell">
                        <%= value.productId.name %>
                      </td>
                      <td class="product-quantity">
                        <%= value.quantity %>
                      </td>
                      <td class="product-status">
                        <%= orderData.status %>
                      </td>
                      <td class="product-price">
                        <%= value.productId.price.toFixed(2) %>
                      </td>
                    </tr>
                    <% }) %>
                  <tr>
                    <th colspan="6">Total Amount</th>
                    <td><span class="subtotal">₹ <%= orderData.totalAmount.toFixed(2) %></span></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        
        <a href="/orderlist" class="text-decoration-none">
          <button class="btn btn-danger btn-block order-button">
            View Your Orders
          </button>
        </a>

      </div>
