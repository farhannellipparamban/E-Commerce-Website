<%- include("../layouts/userPartials/header.ejs") %>

  <style>
    /* Add this CSS to style the confirmation message */
.confirmation-message {
  font-size: 24px; /* Adjust the font size as needed */
  font-weight: bold;
  text-align: center;
  color: #3c3c3c; /* Set your desired text color */
  margin: 20px 0; /* Adjust the margin as needed */
  padding: 10px; /* Add padding for better visual appearance */
  background-color: #f8f8f8; /* Set the background color */
  border: 2px solid #ddd; /* Add a border */
  border-radius: 5px; /* Add border-radius for rounded corners */
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
}

    /* Add these styles to your CSS file */

    .order-details-iner {
      background-color: #f9f9f9;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .order-details-title {
      text-align: center;
      font-size: 28px;
      margin-bottom: 20px;
      color: #333;
    }

    .order-details-table {
      background-color: #fff;
    }

    .product-image-cell {
      width: 10%;
      text-align: center;
    }

    .product-image {
      max-width: 100px;
      height: auto;
    }

    .product-name-cell {
      width: 20%;
    }

    .product-quantity,
    .product-status,
    .product-price {
      text-align: center;
    }

    .subtotal,
    .shipping {
      font-weight: bold;
    }

    .order-button {
      margin-top: 20px;
      font-size: 18px;
      background-color: #ff0000;
      color: #fff;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      padding: 30px 50px;
      transition: background-color 0.3s;
    }

    .order-button:hover {
      background-color: #a09895;
    }
  </style>

  <main>
    <!-- Hero Area Start-->
    <div class="slider-area">
      <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
              <div class="hero-cap text-center">
                <h2>Confirmation</h2>
                <p>Every second counts, make sure you make the most of it</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--================ confirmation part start =================-->
    <section class="confirmation_part section_padding">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="confirmation_tittle">
              <span class="confirmation-message">Thank you. Your order has been received.</span>
            </div>
          </div>
          
          <div class="col-lg-6 col-lx-4">
            <div class="single_confirmation_details">
              <h4>order info</h4>
              <ul>
                <li>
                  <p>order ID</p>
                  <span>: <%= orderData._id %></span>
                </li>
                <!--  -->
                <li>
                  <p>total</p>
                  <span>: ₹ <%= orderData.totalAmount %></span>
                </li>
                <li>
                  <p>mayment methord</p>
                  <span>: <%= orderData.paymentMethod %></span>
                </li>
              </ul>
            </div>
          </div>
