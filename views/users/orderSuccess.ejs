<%- include("../layouts/userPartials/header.ejs") %>
<style>
  /* Add your custom styles here */

  /* Background and font styles */
  body {
    background-color: #f5f5f5;
    font-family: "Poppins", sans-serif;
    font-weight: 300;
  }

  /* Progress bar styles */
  .progresses {
    display: flex;
    align-items: center;
  }

  .line {
    width: 76px;
    height: 6px;
    background: #09ff00;
  }

  .steps {
    display: flex;
    background-color: #00ff40;
    color: #fff;
    font-size: 12px;
    width: 30px;
    height: 30px;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  /* Checkmark styles */
  .check1 {
    display: flex;
    background-color: #2bff00;
    color: #fff;
    font-size: 24px;
    width: 60px;
    height: 60px;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin-bottom: 10px;
  }

  /* Invoice link styles */
  .invoice-link {
    font-size: 15px;
    color: #3498db;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .invoice-link:hover {
    color: #0099ff;
  }

  /* Order button styles */
  .order-button {
    height: 50px;
    background-color: #ff1900;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .order-button:hover {
    background-color: #ff1900;
  }

  /* Background-muted styles */
  .background-muted {
    background-color: #fafafc;
  }
.order_card {
  line-height: 250%;
  color: #28b803;

}
  /* Product card styles */
  .product_card {
    display: flex;
    align-items: center;
    padding: 10px;
  }

  .product_image {
    width: 50px;
    height: 50px;
    margin-right: 20px;
    object-fit: cover;
  }

  .product_details {
    flex: 1;
  }

  .product_name {
    font-weight: bold;
    margin-bottom: 5px;
  }

  .product_quantity,
  .product_price {
    color: #ff0000;
    margin: 20px;
  }

  .product_status {
    font-weight: bold;
    color: #0099ff;
  }
</style>
<!-- Hero Area Start-->
<div class="slider-area">
  <div class="single-slider slider-height2 d-flex align-items-center">
    <div class="container">
      <div class="row">
        <div class="col-xl-12">
          <div class="hero-cap text-center">
            <h2>Confirmation</h2>
            <p>Every second counts, make sure you make the most of it</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br><br><br>
<div class="container mt-4 mb-4">
  <div class="row d-flex cart align-items-center justify-content-center">
    <div class="col-md-10">
      <div class="card shadow">
        <div class="row g-0">
          <div class="col-md-6 border-right p-5 background-muted">
            <div class="text-center order-details">
              <div
                class="d-flex justify-content-center mb-5 flex-column align-items-center"
              >
                <span class="check1"><i class="fa fa-check"></i></span>
                <span class="font-weight-bold">Order Confirmed</span>
                <small class="mt-2">Thank You</small>
              </div>
              <a href="/orderlist" class="text-decoration-none">
                <button class="btn btn-danger btn-block order-button">
                  View Your Orders
                </button>
              </a>
            </div>
          </div>
          <div class="col-md-6 p-5">
            <h3><strong>Customer Address</strong></h3>
            <hr>
            <div class="order_card py-4">
              <%= orderData.deliveryDetails %>
            </div>
      
            <hr>
            <!-- <h3>Order Details</h3> -->
              <div class="product_card">
                <div class="product_details">
                  <p class="product_price"><strong class="text-dark">Order ID &nbsp;:&nbsp; </strong>  <%= orderData._id %></p>
                  <!-- Add more product information here if needed -->
                </div>
                <!-- Add product image and status here if needed -->
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../layouts/userPartials/footer.ejs") %>