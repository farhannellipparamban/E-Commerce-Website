      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
      text-align: center;
      font-size: 14px;
    }

    .quantity-controls {
      display: flex;
      align-items: center;
    }

    .quantity-controls button {
      padding: 7px 10px;
      border: none;
      background-color: #000000;
      font-size: 12px;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .quantity-controls button:hover {
      background-color: #616161;
    }
