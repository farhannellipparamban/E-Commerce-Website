  <style>
    .table-responsive {
      width: 100%;
      /* Set width to 100% to make it span the full width */
      overflow-x: auto;

    }

    /* Add your custom styles here */
    .cart_area th {
      background-color: #f2f2f2;
      font-weight: bold;
      font-size: 16px;
      padding: 15px;
      text-align: center;
    }

    /* Style the table rows */
    .cart_area td {
      padding: 15px;
      text-align: center;
      vertical-align: middle;
    }

    /* Style the product images */
    .cart_area img {
      max-width: 100px;
      max-height: 100px;
    }

    /* Style the quantity controls */
    .quantity-controls {
      display: flex;
      align-items: center;
      margin-left: 120px;
    }

    .quantity-controls button {
      padding: 7px 10px;
      border: none;
      background-color: #000000;
      font-size: 12px;
      cursor: pointer;
      transition: background-color 0.2s;
      color: #fff;
    }

    .quantity-controls button:hover {
      background-color: #616161;
    }

    /* Style the "Remove" button */
    .genric-btn.danger-border.small {
      padding: 5px 10px;
      font-size: 12px;
      background-color: #ff0019;
      color: #fff;
      border: none;
      border-radius: 5px;
      transition: background-color 0.2s;
      cursor: pointer;
    }

    .genric-btn.danger-border.small:hover {
      background-color: #686767;
    }

