      font-size: 14px;
      text-transform: uppercase;
      border-radius: 50px;
      transition: background-color 0.3s;
      font-weight: bold;
      cursor: pointer;
    }

    .checkout_btn_1 {
      border: 2px solid #007bff;
      color: #007bff;
      background-color: transparent;
    }

    .checkout_btn_1:hover {
      background-color: #0056b3;
      color: #fff;
    }

    .checkout_btn_2 {
