  <script>
    function changeQuantity(productId, count) {
      $.ajax({
        url: "/changes",
        method: "post",
        data: {
          productId,
          count: count,
        },
        success: (response) => {
          if (response.success) {
            const quantitySpan = $("#quantity-" + productId);
            quantitySpan.text(response.newQuantity); // Update the quantity displayed on the page
            $("#total").load("/cart #total");
            $("#prices").load("/cart #prices");

          } else {
            Swal.fire({
              title: "Error",
              icon: "error",
              text: response.message,
              timer: 2000,
            });
          }
        },
        error: (error) => {
          Swal.fire({
            title: "Error",
            icon: "error",
            text: error.message,
            timer: 1500,
          });
        },
      });
    }
  </script>

