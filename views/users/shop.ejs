<%- include("../layouts/userPartials/header.ejs") %>

  <main>
    <!-- Hero Area Start-->
    <div class="slider-area">
      <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
              <div class="hero-cap text-center">
                <h2>Watch Shop</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Hero Area End-->

    <!-- Latest Products Start -->
    <section class="popular-items latest-padding">
      <div class="container">
        <hr />
        <div class="row product-btn justify-content-between mb-40">
          <div class="properties__button">
            <!--Nav Button  -->

            <nav>
              <form action="/shop? %>">
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                  <select class="form-select" name="category" id="selxaect1"
                    onchange="location = '/shop?category='+value+'&price=<%= price %>&search=<%= search %>'">

                    <option value="All">All</option>
                    <% if(categoryData.length>0){
                      for(let i=0;i<categoryData.length;i++){ %>
                        <option>
                          <%= categoryData[i].name%>
                        </option>
                        <% } }else{ %>

                          <option>No Category Availiable</option>
                          <% } %>
                  </select>
                </div>
            </nav>
          </div>

          <div class="grid-list-view"></div>
          <div class="select-this d-flex">
            <div class="select-itms">
              <select name="price" id="select1"
                onchange="location = '/shop?category=<%= category %>&price='+value+'&search=<%= search %>'">
                <% if(price=="High" ){%>
                  <option value="Low">Low to High</option>
                  <option value="High" selected>High to Low</option>
                  <%}else {%>
                    <option value="Low" selected>Low to High</option>
                    <option value="High">High to Low</option>
                    <%} %>
              </select>
            </div>


            <div class="subscribe_form" style="margin-left: 10px">
              <input type="text" placeholder="Search Product" name="search" />

              <button type="submit" class="genric-btn success circle arrow">
                search
              </button>
            </div>
            </form>
          </div>
        </div>
        <hr />

        <section class="popular-items">
          <div class="container">
            <div class="row">
              <% if (product.length> 0) { %>
                <% product.forEach((value, index)=> { %>
                  <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                    <div class="single-popular-items mb-50 text-center">
                      <div class="popular-img">
                        <a href="/product_details?id=<%= value._id %>">
                          <img src="/assets/CropedImages/<%= value.image[0] %>" alt="<%= value.name %>" class="img-fluid" />
                        </a>
                        <div class="favorit-items">
                          <a href="#" title="Wishlist" data-bs-toggle="modal" data-bs-target="#liton_wishlist_modal">
                            <span class="flaticon-heart" onclick="addToWishlist('<%= value._id %>')"></span></a>
                        </div>
                        <div class="img-cap">
                          <button type="submit" onclick="addToCart('<%=value._id%>')" class="btn btn-danger" id="add-to-cart">
                            add to cart
                          </button>
                        </div>
                      </div>
                  
                      <div class="popular-caption">
                        <h3>
                          <a href="/product_details?id=<%= value._id %>">
                            <%= value.name %>
                          </a>
                        </h3>
                        <span>â‚¹ <%= value.price %></span>
                      </div>
                    </div>
                  </div>
                  <% }); %>
                    <% } else { %>
                      <h3>
                        <ul class="pagination justify-content-center" style="margin: 20px 0">
                          <li class="page-item ml-4">
                            No Product found
                          </li>
                        </ul>
                      </h3>
                      <% } %>

            </div>
          </div>
        </section>
      </div>
      <h3>

        <ul class="pagination justify-content-center" style="margin: 20px 0">
          <% for (let i=1; i <=totalpages; i++) { %>
            <li class="page-item ml-4">
              <a class="page-link"
                href="?page=<%= i %>&category=<%= category %>&price=<%= price %>&search=<%= search %>">
                <%= i %>
              </a>
            </li>
            <% } %>
        </ul>
      </h3>
      </div>
    </section>

    <div class="shop-method-area">
      <div class="container">
        <div class="method-wrapper">
          <div class="row d-flex justify-content-between">
            <div class="col-xl-4 col-lg-4 col-md-6">
              <div class="single-method mb-40">
                <i class="ti-package"></i>
                <h6>Free Shipping Method</h6>
                <p>aorem ixpsacdolor sit ameasecur adipisicing elitsf edasd.</p>
              </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-6">
              <div class="single-method mb-40">
                <i class="ti-unlock"></i>
                <h6>Secure Payment System</h6>
                <p>aorem ixpsacdolor sit ameasecur adipisicing elitsf edasd.</p>
              </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-6">
              <div class="single-method mb-40">
                <i class="ti-reload"></i>
                <h6>Secure Payment System</h6>
                <p>aorem ixpsacdolor sit ameasecur adipisicing elitsf edasd.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>


  <script>
    function addToCart(id) {
      console.log(id);
      $.ajax({
        url: "/addtocart",
        method: "post",
        encoded: true,
        data: {
          id: id,
        },
      }).done((data) => {
        if (data.success) {
          Swal.fire({
            position: "center",
            icon: "success",
            title: "Product added to cart",
            showConfirmButton: false,
            timer: 1500,
          });
        }else {
          window.location.href = '/login';
        }
      });
    }

    function addToWishlist(id) {
      console.log(id);
      $.ajax({
        url: "/addToWishlist",
        method: "post",
        encoded: true,
        data: {
          Id: id,
        },
      }).success((response) => {
        if (response.success) {
          Swal.fire({
            position: "center",
            icon: "success",
            title: "Added To Wishlist",
            showConfirmButton: false,
            timer: 1500,
          });
        } else if (response.check) {
          Swal.fire({
            position: "center",
            icon: 'warning',
            title: 'Oops...',
            text: "Already added to Wishlist!!",
          });
        } else {
          window.location.href = '/login';
        }
      });
    }
  </script>

