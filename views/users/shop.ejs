  <script>

    function addToCart(id){
          console.log(id);
          $.ajax({
              url:'/addtocart',
              method:"post",
              encoded:true,
              data:{
                  id:id,
              },
          }).done((data)=>{
              if (data.success){
                  Swal.fire({
                  position: 'center',
                  icon: 'success',
                  title: 'Product added to cart',
                  showConfirmButton: false,
                  timer: 1500
                  })
              }
          })

      }


    // Your JavaScript code for handling product filters

    // Function to fetch filtered products based on selected brand and gender
    function fetchFilteredProducts(brand, gender) {
      // Make a fetch request to the server to get filtered products
      fetch(`/products/brand/${brand}`);
      // Update the fetch request for gender filter
      fetch(`/products/gender/${gender}`)
        .then((response) => response.json())
        .then((data) => {
          // Update the product listing on the page with the filtered products
          const productList = document.querySelector(
            ".popular-items .container .row"
          );
          productList.innerHTML = ""; // Clear existing products

          data.forEach((product) => {
            productList.innerHTML += `
              <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                <div class="single-popular-items mb-50 text-center">
                  <!-- Your product display code here -->
                </div>
              </div>
            `;
          });
        })
        .catch((error) =>
          console.error("Error fetching filtered products:", error)
        );
    }

    // Event listeners for filter selection
    const brandFilterSelect = document.getElementById("brandFilter");
    const genderFilterSelect = document.getElementById("genderFilter");

    brandFilterSelect.addEventListener("change", () => {
      const selectedBrand = brandFilterSelect.value;
      const selectedGender = genderFilterSelect.value;
      fetchFilteredProducts(selectedBrand, selectedGender);
    });

    genderFilterSelect.addEventListener("change", () => {
      const selectedBrand = brandFilterSelect.value;
      const selectedGender = genderFilterSelect.value;
      fetchFilteredProducts(selectedBrand, selectedGender);
    });
  </script>
