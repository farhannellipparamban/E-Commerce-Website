  <script>
    function addToCart(id) {
      console.log(id);
      $.ajax({
        url: "/addtocart",
        method: "post",
        encoded: true,
        data: {
          id: id,
        },
      }).done((data) => {
        if (data.success) {
          Swal.fire({
            position: "center",
            icon: "success",
            title: "Product added to cart",
            showConfirmButton: false,
            timer: 1500,
          });
        } else {
          window.location.href = '/login';
        }
      });
    }

    function addToWishlist(id) {
      console.log(id);
      $.ajax({
        url: "/addToWishlist",
        method: "post",
        encoded: true,
        data: {
          Id: id,
        },
      }).success((response) => {
        if (response.success) {
          Swal.fire({
            position: "center",
            icon: "success",
            title: "Added To Wishlist",
            showConfirmButton: false,
            timer: 1500,
          });
        } else if (response.check) {
          Swal.fire({
            position: "center",
            icon: 'warning',
            title: 'Oops...',
            text: "Already added to Wishlist!!",
          });
        } else {
          window.location.href = '/login';
        }
      });
    }
  </script>

  <script>
    // Function to show/hide Clear Filters button based on applied filters
    function toggleClearFiltersButton() {
      const category = document.getElementById('selxaect1').value;
      const price = document.getElementById('select1').value;
      const search = document.querySelector('input[name="search"]').value;

      const clearFiltersButton = document.getElementById('clear-filters-btn');

      if (category !== 'All' || price !== 'Low' || search.trim() !== '') {
        clearFiltersButton.style.display = 'inline-block';
      } else {
        clearFiltersButton.style.display = 'none';
      }
    }

    // Call the function initially and whenever filter values change
    toggleClearFiltersButton();
    document.getElementById('selxaect1').addEventListener('change', toggleClearFiltersButton);
    document.getElementById('select1').addEventListener('change', toggleClearFiltersButton);
    document.querySelector('input[name="search"]').addEventListener('input', toggleClearFiltersButton);
  </script>


