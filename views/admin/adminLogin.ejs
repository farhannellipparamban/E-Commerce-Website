<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>WATCH PALACE - Sign in</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content="" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="/Admin/imgs/theme/favicon.svg"
    />
    <link href="/Admin/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
      }

      .content-main {
        padding: 100px 0;
      }

      .card-login {
        max-width: 400px;
        margin: 0 auto;
        background-color: #c5c2c2;
        border-radius: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 50px;
      }

      .card-title {
        text-align: center;
        margin-bottom: 20px;
        color: #000000;
        font-size: 24px;
        font-weight: bold;
      }

      .form-control {
        border: 1px solid #797272;
        border-radius: 5px;
        padding: 12px;
        font-size: 16px;
      }

      .form-check-label {
        margin-left: 5px;
        color: #000000;
      }

      .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 20px;
        padding: 14px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        transition: background-color 0.3s;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }

      .mb-3 {
        margin-bottom: 40px;
      }

      .mb-4 {
        margin-bottom: 65px;
      }

      .mb-80 {
        margin-bottom: 100px;
      }

      .font-sm {
        font-size: 14px;
      }

      .text-muted {
        color: #000000;
      }

      a {
        color: #ff0000;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <main>
      <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login">
          <div class="card-body">
            <h4 class="card-title mb-4">Sign in</h4>
            <form
              action="/admin/"
              method="post"
              onsubmit="return validateForm()"
            >
              <div class="mb-3">
                <input
                  class="form-control"
                  placeholder="Enter Email"
                  type="email"
                  name="email"
                  id="email"
                  required
                />
              </div>
              <div class="mb-3">
                <input
                  class="form-control"
                  placeholder="Enter Password"
                  type="password"
                  name="password"
                  id="password"
                  required
                />
              </div>
              <div class="mb-4">
                <button type="submit" class="btn btn-primary w-100">
                  Login
                </button>
              </div>
              <div>
                <a href="#" class="font-sm text-muted">Forgot password?</a>
              </div>
            </form>
          </div>
          <p class="text-center mb-4">
            Don't have an account? <a href="#">Sign up</a>
          </p>
        </div>
      </section>
    </main>
    <script src="/Admin/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/Admin/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/Admin/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="/Admin/js/main.js?v=1.1" type="text/javascript"></script>

    <script>
      function validateForm() {
        var emailInput = document.getElementById("email");
        var passwordInput = document.getElementById("password");

        if (emailInput.value.trim() === "") {
          alert("Please enter your email.");
          emailInput.focus();
          return false;
        }

        if (passwordInput.value.trim() === "") {
          alert("Please enter your password.");
          passwordInput.focus();
          return false;
        }

        return true;
      }
    </script>
  </body>
</html>
