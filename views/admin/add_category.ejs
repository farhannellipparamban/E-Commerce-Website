<%- include("../layouts/adminPartials/header.ejs") %>
<style>
  body {
    font-family: "Your Preferred Font", Arial, sans-serif;
    background-color: #f9f9f9;
    color: #0f0e0e;
  }

  .container {
    margin-top: 5%;
    width: 60%;
    align-self: center;
    padding: 20px;
    background-color: #f0f0f0;
    border-radius: 25px;
  }

  .form-container {
    padding: 30px;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.527);
  }

  h4 {
    text-align: center;
    margin-bottom: 20px;
    font-size: 24px;
    font-weight: bold;
    color: #000000;
  }

  .form-input {
    border-radius: 5px;
    border: 1px solid #ccc;
    padding: 10px;
    width: 100%;
    font-size: 14px;
    color: #000000;
    transition: border-color 0.3s ease-in-out;
  }

  .form-input:focus {
    outline: none;
    border-color: #5cf683;
    box-shadow: 0 0 5px rgba(92, 246, 92, 0.3);
  }

  .error-message {
    color: #f60000;
    text-align: center;
  }

  .btn-add {
    padding: 10px 20px;
    font-size: 14px;
    font-weight: bold;
    color: rgb(255, 255, 255);
    background-color: #2bb42b;
    border: none;
    border-radius: 5px;
    transition: background-color 0.3s ease-in-out;
    cursor: pointer;
  }

  .btn-add:hover {
    background-color: #f0e9e9;
  }
</style>

<div class="container">
  <div class="form-container">
    <h4>Add Category</h4>
    <form action="" method="post">
      <div class="form-group">
        <label for="fname">Category Name</label>
        <input type="text" name="name" id="fname" class="form-input" required />
        <% if (typeof message !=='undefined' ) { %>
        <span class="error-message"> <%= message %> </span>
        <% } %>
      </div>
      <button type="submit" class="btn btn-add">Add</button>
    </form>
  </div>
</div>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
  const name = document.getElementById("fname");

  name.addEventListener("input", () => {
    if (name.value.trim().length == "") {
      name.setCustomValidity("This Field Cannot be Null");
    } else {
      name.setCustomValidity("");
    }
  });
</script>
